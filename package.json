{
    "name": "backend",
    "version": "1.0.0",
    "description": "",
    "main": "build/index.js",
    "scripts": {
        "prepare": "husky install",
        "start": "tsc --project ./tsconfig.build.json && node build/index.js",
        "dev": "concurrently \"tsc --watch\" \"nodemon --delay 500ms -q build/index.js\"",
        "test": "jest"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "dependencies": {
        "@prisma/client": "^4.10.1",
        "cors": "^2.8.5",
        "dotenv": "^16.0.3",
        "express": "^4.18.2"
    },
    "devDependencies": {
        "@tsconfig/node18-strictest": "^1.0.0",
        "@types/cors": "^2.8.13",
        "@types/express": "^4.17.16",
        "@types/jest": "^29.4.0",
        "@types/node": "^18.11.18",
        "@typescript-eslint/eslint-plugin": "^5.50.0",
        "@typescript-eslint/parser": "^5.50.0",
        "concurrently": "^7.6.0",
        "eslint": "^8.33.0",
        "eslint-config-prettier": "^8.6.0",
        "husky": "^8.0.3",
        "jest": "^29.4.1",
        "nodemon": "^2.0.20",
        "prettier": "2.8.3",
        "pretty-quick": "^3.1.3",
        "ts-jest": "^29.0.5",
        "typescript": "^4.9.5"
    },
    "eslintConfig": {
        "env": {
            "node": true
        },
        "extends": [
            "eslint:recommended",
            "plugin:@typescript-eslint/recommended",
            "plugin:@typescript-eslint/recommended-requiring-type-checking",
            "prettier"
        ],
        "parser": "@typescript-eslint/parser",
        "parserOptions": {
            "tsconfigRootDir": "./",
            "project": [
                "./tsconfig.json"
            ]
        },
        "plugins": [
            "@typescript-eslint"
        ],
        "root": true
    },
    "jest": {
        "preset": "ts-jest",
        "testEnvironment": "node",
        "testMatch": [
            "**/__tests__/**/?(*.)+(test).ts"
        ]
    }
}
